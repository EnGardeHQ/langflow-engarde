# EnGarde Platform Environment Variables
# Copy this file to .env and update with your actual values

# =============================================================================
# SECURITY KEYS (REQUIRED - MUST CHANGE IN PRODUCTION)
# =============================================================================
SECRET_KEY=your-secret-key-here-change-in-production
NEXTAUTH_SECRET=your-nextauth-secret-here-change-in-production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=engarde
POSTGRES_USER=engarde_user
POSTGRES_PASSWORD=engarde_password

# =============================================================================
# ENVIRONMENT
# =============================================================================
NODE_ENV=development
# Options: development, staging, production

# =============================================================================
# AI SERVICE KEYS (OPTIONAL - ADD YOUR OWN)
# =============================================================================
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=

# =============================================================================
# PAYMENT INTEGRATION (OPTIONAL)
# =============================================================================
STRIPE_WEBHOOK_SECRET=
PAYPAL_WEBHOOK_SECRET=

# =============================================================================
# ERROR TRACKING (OPTIONAL)
# =============================================================================
ENABLE_SENTRY=false
SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=

# =============================================================================
# ANALYTICS (OPTIONAL)
# =============================================================================
GA_MEASUREMENT_ID=

# =============================================================================
# EXTERNAL SERVICES (OPTIONAL)
# =============================================================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@engarde.com

# =============================================================================
# FRONTEND BUILD CONFIGURATION
# =============================================================================
# Build mode for frontend Docker builds
# Options:
#   - production: Full SSR build with polyfills (recommended for production)
#   - development: Development build that bypasses SSR optimization
#   - static: Static export that completely bypasses SSR
FRONTEND_BUILD_MODE=production

# Static export configuration (only used when FRONTEND_BUILD_MODE=static)
STATIC_EXPORT=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_MARKETPLACE=true
ENABLE_AI_AGENTS=true
ENABLE_ANALYTICS=true
ENABLE_PWA=true

# =============================================================================
# LANGFLOW CONFIGURATION
# =============================================================================
# Langflow Authentication
LANGFLOW_SUPERUSER=admin
LANGFLOW_SUPERUSER_PASSWORD=admin

# Langflow Database Configuration
LANGFLOW_DB_USER=langflow_user
LANGFLOW_DB_PASSWORD=langflow_password

# Langflow Performance Settings
LANGFLOW_POOL_SIZE=10
LANGFLOW_MAX_OVERFLOW=20
LANGFLOW_WORKER_TIMEOUT=300
LANGFLOW_WORKERS=1

# Langflow Logging
LANGFLOW_LOG_LEVEL=info

# Langflow Features
LANGFLOW_AUTO_LOGIN=true